<button {{action "toggleModal"}} class="btn btn-warning">Update Listing</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    <h1>Update Listing</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="title">Title:</label>
          {{input value=listing.title id="title" class="form-control" }}
        </div>
        <div class="form-group">
          <label for="user">User:</label>
          {{input value=listing.user id="user" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          {{input value=listing.description id="description" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="image">Image URL:</label>
          {{input value=listing.image id="image" class="form-control"}}
        </div>
        <button  {{action 'updateListing' listing}} class="btn btn-success">Save</button>
      </form>
    </div>
  {{/modal-dialog}}
{{/if}}
